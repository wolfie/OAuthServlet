<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>AppFoundationTest</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<servlet>
		<servlet-name>Appfoundationtest Application</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>com.github.wolfie.appfoundationtest.AppfoundationtestApplication</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>oauthservlet</servlet-name>
		<servlet-class>org.vaadin.appfoundation.authentication.oauth.OAuthServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>oauthservlet</servlet-name>
		<url-pattern>/oauth/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Appfoundationtest Application</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
</web-app>
